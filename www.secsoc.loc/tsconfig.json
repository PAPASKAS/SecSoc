{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@/*": [ "./*" ],
      "@public/*": ["../public/*"]
    },
    "target": "ES6",
    "module": "ES6",
    "lib": [
      "dom",
      "dom.iterable"
    ],
    "skipLibCheck": true,
    "strict": true,
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "classic",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src"
  ]
}